<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/appThemeColor</item>
        <item name="colorPrimaryDark">@color/appThemeColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--<item name="droppyPopupStyle">@style/customDroppyPopup</item>-->
        <!--<item name="droppyMenuItemTitleStyle">@style/customMenuItemTitle</item>-->
    </style>

    <style name="AppTheme.FitsStatusBar" />
    <!-- 标题栏样式 -->
    <style name="title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/appThemeColor</item>
    </style>  <!-- 一般的功能列表-->
    <style name="normal_item_style">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:background">@drawable/view_defulte_color</item>
        <!--<item name="android:background">?android:attr/selectableItemBackground</item>-->
    </style>
</resources>
